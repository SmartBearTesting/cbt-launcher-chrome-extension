{
  "name": "CBT launcher",
  "version": "1.0",
  "description": "Opens the CBT test launcher in current active tab",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action" :
  {
    "default_icon" : "icon-48.png",
    "default_title" : "Launch CBT"
  },
  "permissions" : [
      "activeTab"
  ],
  "icons" : {
    "48" : "icon-48.png"
  },
  "manifest_version": 2
}
